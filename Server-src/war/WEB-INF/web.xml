<?xml version="1.0" encoding="UTF-8"?>	
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"	
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"	
         id="WebApp_ID"
         version="3.0">	
    <display-name>Universal Remote Server</display-name>
    	
    <servlet>	
	<servlet-name>MainServlet</servlet-name>	
	<servlet-class>com.netapps.project2.universalremote.MainServlet</servlet-class>	
    </servlet>
    <servlet>	
	<servlet-name>ApiServlet</servlet-name>	
	<servlet-class>com.netapps.project2.universalremote.ApiServlet</servlet-class>	
    </servlet>
    <servlet>	
	<servlet-name>DataUpdateServlet</servlet-name>	
	<servlet-class>com.netapps.project2.universalremote.DataUpdateServlet</servlet-class>	
    </servlet>
    
    <servlet-mapping>	
	<servlet-name>MainServlet</servlet-name>	
	<url-pattern>/*</url-pattern>	
    </servlet-mapping>
    <servlet-mapping>	
	<servlet-name>ApiServlet</servlet-name>	
	<url-pattern>/api</url-pattern>	
    </servlet-mapping>
    <servlet-mapping>	
	<servlet-name>DataUpdateServlet</servlet-name>	
	<url-pattern>/dataupdateterminal</url-pattern>	
    </servlet-mapping>
</web-app>	
